        <!-- Extend the external layout to show specific invoice headers/footers -->
        <template id="inherit_external_layout_airflow" inherit_id="web.external_layout">
            <!-- Just remove the second else, merge it into the below xpath-->
            <xpath expr="//t[@t-call='web.external_layout_standard']" position="replace"/>

            <xpath expr="//t[@t-if='company.external_report_layout_id']" position="replace">
                <t t-set="layout" t-value="company.external_report_layout_id.key or 'web.external_layout_standard'"/>
                <t t-if="doc_model == 'account.move' or env.context.get('customer_statement')">
                    <t t-if="layout == 'web.external_layout_background'">
                        <t t-call="airflow_account.external_layout_background_airflow"><t t-raw="0"/></t>
                    </t>
                    <t t-elif="layout == 'web.external_layout_boxed'">
                        <t t-call="airflow_account.external_layout_boxed_airflow"><t t-raw="0"/></t>
                    </t>
                    <t t-elif="layout == 'web.external_layout_clean'" >
                        <t t-call="airflow_account.external_layout_clean_airflow"><t t-raw="0"/></t>
                    </t>
                    <t t-elif="layout == 'web.external_layout_standard'">
                        <t t-call="airflow_account.external_layout_standard_airflow"><t t-raw="0"/></t>
                    </t>
                </t>
                <t t-else="else">
                    <t t-if="company.external_report_layout_id" t-call="{{company.external_report_layout_id.key}}"><t t-raw="0"/></t>
                    <t t-else="else" t-call="web.external_layout_standard"><t t-raw="0"/></t>
                </t>
            </xpath>


