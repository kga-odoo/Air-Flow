<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_invoice_form_form_inherit_airflow" model="ir.ui.view">
        <field name="name">account.invoice.form.inherit.air.flow</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <data>
                <field name="ref" position="after">
                    <field name="proj_manager_name"/>
                    <field name="proj_name"/>
                </field>
                <field name="company_id" position="after">
                    <field name="ship_date"/>
                    <field name="ship_method"/>
                </field>
                <field name="date" position="after">
                    <field name="paid_date" attrs="{'readonly': [('state', '!=', 'paid')]}"/>
                </field>
            </data>
        </field>
    </record>
</odoo>
