<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_invoice_form_form_inherit_airflow" model="ir.ui.view">
        <field name="name">account.invoice.form.inherit.air.flow</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <field name="ref" position="after">
                <field name="move_type" invisible="1"/>
                <field name="proj_manager_name" attrs="{'invisible': [('move_type','!=','out_invoice')]}"/>
                <field name="proj_name" attrs="{'invisible': [('move_type','!=','out_invoice')]}"/>
                <field name="ship_date" attrs="{'invisible': [('move_type','!=','out_invoice')]}"/>
                <field name="ship_method" attrs="{'invisible': [('move_type','!=','out_invoice')]}"/>
            </field>
            <field name="date" position="after">
                <field name="paid_date" attrs="{'readonly': [('state', '!=', 'paid')]}"/>
            </field>
        </field>
    </record>
</odoo>
