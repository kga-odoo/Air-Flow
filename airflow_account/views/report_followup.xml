<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <record id="followup_filter_info_template_inherit_airflow" model="ir.ui.view">
        <field name="name">followup.filter.info.template.inherit.air.flow</field>
        <field name="inherit_id" ref="account_followup.followup_filter_info_template"/>
        <field name="arch" type="xml">
            <!-- Remove "Document: " and "Date: " -->
            <xpath expr="//span[@t-esc='today']/parent::*" position="replace">
                <!-- Re-compute partner_addr here, variable on the parent is not detected for some reason -gye -->
                <t t-if="invoice_address_id" t-set="partner_addr" t-value="invoice_address_id"></t>
                <t t-else="" t-set="partner_addr" t-value="partner"></t>
                
                <p style="margin-top: 35px;">
                    Customer account statement<br/>
                    <span t-esc="today" t-options="{'widget': 'date', 'format': 'M/d/Y'}"/><br/>
                    <t t-if='partner_addr.ref'>Customer ref: <span t-field="partner_addr.ref"/></t>
                </p>
            </xpath>
            <!-- Move address to left -->
            <xpath expr="//div[hasclass('offset-7')]" position="attributes">
                <attribute name="class">col-5</attribute>
            </xpath>
        </field>
    </record>
</odoo>
