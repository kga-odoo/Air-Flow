<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <act_window
            id="action_account_discounted_payment_from_invoices"
            name="Register Discounted Payment"
            res_model="account.register.discounted.payments"
            view_mode="form"
            target="new"
            binding_model="account.move"
    />
    <record id="view_account_discounted_payment_from_invoices" model="ir.ui.view">
        <field name="name">account.register.discounted.payments.wizard</field>
        <field name="model">account.register.discounted.payments</field>
        <field name="arch" type="xml">
            <form string="Register Discounted Payment">
                <!--                <field name="payment_type" invisible="1"/>-->
                <!--                <field name="partner_type" invisible="1"/>-->
                <!--                <field name="partner_id" invisible="1"/>-->
                <group>
                    <group>
                        <field name="journal_id" widget="selection"/>
                        <!--                        <field name="hide_payment_method" invisible="1"/>-->
                        <!--                        <field name="payment_method_id" widget="radio"-->
                        <!--                               attrs="{'invisible': [('hide_payment_method', '=', True)]}"/>-->
                        <!--                        <field name="payment_method_code" invisible="1"/>-->
                        <!--                        <field name="currency_id" invisible="1"/>-->
                        <!--                        <field name="multi" invisible="1"/>-->
                        <!--                        <field name="amount" invisible="1"/>-->
                    </group>
                    <group>
                        <field name="payment_date"/>
                        <!--                        <field name="communication"/>-->
                    </group>
                </group>
                <group string="Payment Allocations">
                    <field name="payment_allocation_ids" nolabel="1">
                        <tree editable="bottom" create="0">
                            <field name="invoice_id" readonly="1" force_save="1"/>
                            <field name="reference" readonly="1"/>
                            <field name="residual" readonly="1" force_save="1"/>
                            <field name="available_discount"/>
                            <field name="total_to_pay" readonly="1" force_save="1"/>
                            <field name="total_paid"/>
                            <field name="status"/>
                        </tree>
                    </field>
                </group>
                <group>
                    <group string="Write-Off Accounts">
                        <field name="discount_account_id"
                               attrs="{'required': [('total_available_discount', '>', 0)]}"/>
                        <field name="discount_account_label"/>
                        <field name="gain_account_id" attrs="{'required': [('payment_difference', '>', 0)]}"/>
                        <field name="gain_account_label"/>
                    </group>
                    <group>
                        <field name="total_available_discount" string="Total Discount"/>
                        <field name="total_to_pay"/>
                        <field name="total_paid_amount"/>
                        <field name="payment_difference"/>
                    </group>
                </group>
                <footer>
                    <button string='Validate' name="create_payments" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>