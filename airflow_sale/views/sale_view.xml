<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_order_form_inherit_airflow" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.air.flow</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']//tree//field[@name='analytic_tag_ids']" position="before">
                <field name="analytic_account_id" groups="analytic.group_analytic_accounting"/>
            </xpath>
            <xpath expr="//field[@name='order_line']//form//field[@name='invoice_status']" position="before">
                <field name="analytic_account_id" groups="analytic.group_analytic_accounting"/>
            </xpath>
        </field>
    </record>
    
</odoo>
