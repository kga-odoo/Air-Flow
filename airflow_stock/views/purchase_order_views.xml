<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_purchase_order_form_inherit_airflow_tag" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit.airflow.tag</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form[1]/sheet[1]/notebook[1]/page[1]/field[@name='order_line']/tree[1]/field[@name='name']"
                   position="after">
                <field name="tag"/>
            </xpath>
        </field>
    </record>

</odoo>
